/**
 * Submit handler for node form.
 */
function simple_metatag_node_form_submit($form, FormStateInterface $form_state) {
  $node = $form_state->getFormObject()->getEntity();

  // Only save if node is saved (has ID).
  if ($node->isNew()) {
    return;
  }

  $title = $form_state->getValue(['simple_metatag', 'metatag_title']);
  $description = $form_state->getValue(['simple_metatag', 'metatag_description']);

  // Handle image upload.
  $image_fid = NULL;
  $image_array = $form_state->getValue(['simple_metatag', 'metatag_image']);
  if (!empty($image_array[0])) {
    $file = \Drupal\file\Entity\File::load($image_array[0]);
    if ($file) {
      $file->setPermanent();
      $file->save();
      $image_fid = $file->id();
    }
  }

  // Check if record exists.
  $database = \Drupal::database();
  $exists = $database->select('simple_metatag_entity', 'e')
    ->fields('e', ['id'])
    ->condition('entity_type', 'node')
    ->condition('entity_id', $node->id())
    ->execute()
    ->fetchField();

  $fields = [
    'title' => $title,
    'description' => $description,
    'image' => $image_fid,
  ];

  if ($exists) {
    // Update existing record.
    $database->update('simple_metatag_entity')
      ->fields($fields)
      ->condition('entity_type', 'node')
      ->condition('entity_id', $node->id())
      ->execute();
  }
  else {
    // Insert new record.
    $fields['entity_type'] = 'node';
    $fields['entity_id'] = $node->id();
    $database->insert('simple_metatag_entity')
      ->fields($fields)
      ->execute();
  }
}

